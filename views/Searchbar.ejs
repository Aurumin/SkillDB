    <script type="text/javascript">
        Verfuegbare_Skills = <%-JSON.stringify(Verfuegbare_Skills)%>

        function LiveSuggestion() {
            var Suchbegriff_aktuell = document.getElementById("Search123").value;
            var max_Anzahl_Suggestions = 6;
            var Suggestions = [];

            console.log("Beginn");
            console.log(Suchbegriff_aktuell);
            for (var i = 0; i < Verfuegbare_Skills.length; i++) {
                if (Suche_Robust2(Verfuegbare_Skills[i], Suchbegriff_aktuell)) {
