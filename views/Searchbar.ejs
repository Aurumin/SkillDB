                    console.log(Suggestions);
                }
            }
            console.log("EndeEndeEndeEndeEndeEndeEndeEndeEndeEnde")

            Suggestions = Suggestions.sort(shuffle);
            var Suggestions_length = Suggestions.length;


            var laenger = false;
            while (Suggestions.length >= max_Anzahl_Suggestions) {
                laenger = true;
                if (Suggestions.length == max_Anzahl_Suggestions) {
                    break;
                }
                Suggestions.pop();
            }
            if (laenger) {
                Suggestions.pop();
            }
            if (laenger) {
                var Mehr = "+ " + String(Suggestions_length - 5);
                Suggestions.push(Mehr);
            }
            console.log("Nach Hier: ")
            console.log(Suggestions);

            console.log(Suggestions);
            var Sugggest_name_list = ["suggest1", "suggest2", "suggest3", "suggest4", "suggest5", "suggest6"]
            for (var g = 0; g < 6; g++) {
                if (Suggestions[g] != undefined) {
